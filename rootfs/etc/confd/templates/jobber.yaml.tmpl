# Generated by confd {{datetime}}

version: 1.4

prefs:
  logPath: /scrutiny/jobber/log.log
  runLog:
    type: file
    path: /scrutiny/jobber/runlog
    maxFileLen: 100m
    maxHistories: 2

resultSinks:
  - &filesystemSink
    type: filesystem
    path: /scrutiny/jobber
    data:
      - stdout
      - stderr
    maxAgeDays: 10

jobs:
  MetricsJob:
    cmd: /scrutiny/bin/scrutiny-collector-metrics run
    # run daily at midnight.
    time: '{{getv "/cron/metrics" "0 0 0 * * *"}}'
    onError: Backoff
    notifyOnSuccess:
      - *filesystemSink
    notifyOnFailure:
      - *filesystemSink

